@model IEnumerable<ASLRD_r3.DAL.restaurant>

@{
    ViewBag.Title = "Restaurant";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string cityname = Request.Params["cityname"];
}
<p>
<h2>Liste des restaurants</h2>
<h3>Ville: <a href="@Url.Action("GetRestaurant", "Home", new { cityname = @cityname })">@cityname</a></h3>
<p/>
<table id="grid-restaurant">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.genre)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.genre)
            </td>
            <td>
                @Html.ActionLink("La carte", "GetProduit", new { restaurantID = @item.restaurantID, restaurantname = @item.nom, cityname = @cityname}, null)
            </td>
        </tr>
    }
</table>
<p class="message-error">@ViewBag.error</p>
