@model IEnumerable<ASLRD_r3.DAL.detailcommandetmp>

    
@{
    ViewBag.Title = "Commande";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string cityname = Request.Params["cityname"];
    string restaurantname = Request.Params["restaurantname"];
    string restaurantID = Request.Params["restaurantID"];
}
<p>
<h2>Commande</h2>
<h3>Restaurant: <a href="@Url.Action("GetProduit", "Home", new { restaurantID = @restaurantID, restaurantname = @restaurantname, cityname = @cityname })">@restaurantname</a> | Ville: <a href="@Url.Action("GetRestaurant", "Home", new { cityname = @cityname })">@cityname</a></h3>
<p/> 
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.quantitee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.reduction)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.datedetailcommande)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.restaurantID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.commandeID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.quantitee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.reduction)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.datedetailcommande)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.restaurantID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.commandeID)
        </td>
        <td>
            @Html.ActionLink("Supprimer", "RemoveFromPanierTMP", new { detailcommandeID = item.detailcommandeID })
        </td>
    </tr>
}
</table>
<p class="message-error">@ViewBag.error</p>
<p/>
@Html.ActionLink("Valider", "GetFinish", new { restaurantID = @restaurantID, restaurantname = @restaurantname, cityname = @cityname}, new {type = "button" })